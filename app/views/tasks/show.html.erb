<div class="ms-4"><h1><%= @task.title %></h1>

<div class="alert alert-light me-4" role="alert">
  <%= @task.details %>
</div>


<div >
  <div >
  <% if @task.completed %>
    <input type="checkbox" checked class="form-check-input" id="exampleCheck1">
    <label class="form-check-label" for="exampleCheck1">This task is completed</label>
  <% else %>
    <input type="checkbox" class="form-check-input" id="exampleCheck1">
    <label class="form-check-label" for="exampleCheck1">This task is not completed yet</label>
  <% end %>
  </div>
</div>

<p class="border-bottom border-secondary mt-3 me-3"></p>

<div class="mt-2"><%= link_to "Back to list", index_path %></div></div>
